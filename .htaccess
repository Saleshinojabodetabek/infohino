# =====================================
# üîí SECURITY + SEO FRIENDLY .HTACCESS
# =====================================

Options -Indexes

RewriteEngine On

# 1Ô∏è‚É£ Paksa HTTPS (SEO Friendly)
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# =====================================================
#  üöÄ REMOVE .PHP FROM URL ‚Äî CLEAN URL SYSTEM
# =====================================================

# Redirect dari /file.php ‚Üí /file (SEO Friendly)
RewriteCond %{THE_REQUEST} \s/+(.+?)\.php[\s?] [NC]
RewriteRule ^ %1 [R=301,L]

# Akses otomatis /file ‚Üí file.php
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+)$ $1.php [L]

# =====================================================
# 2Ô∏è‚É£ Minimal Security Rules (AMAN & TIDAK GANGGU SEO)
# =====================================================

# Lindungi file sensitif
<FilesMatch "(^\.|config\.php|koneksi\.php|\.env|composer\.json|composer\.lock|\.git)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Cegah eksekusi PHP di folder upload
RewriteRule ^admin/api/uploads/.*\.(php|phtml|php5)$ - [F,L]

# Proteksi .htaccess
<Files ".htaccess">
    Order allow,deny
    Deny from all
</Files>

# Basic Block LFI / RFI
RewriteCond %{QUERY_STRING} (\.\./|\.\.\\|/etc/passwd) [NC]
RewriteRule .* - [F,L]

# =====================================================
# 3Ô∏è‚É£ Cache Optimization (SEO Speed Boost)
# =====================================================

<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresDefault "access plus 2 days"
</IfModule>

# =====================================================
# 4Ô∏è‚É£ Security Headers (Ringan & Aman)
# =====================================================

<IfModule mod_headers.c>
Header always set X-Content-Type-Options "nosniff"
Header always set X-Frame-Options "SAMEORIGIN"
Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>
